<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="grid grid-cols-4 gap-4">

  <div class="p-6 rounded-lg shadow-lg bg-white mb-4">
    <p class="font-bold">
      Evertinho Bank Logo  
    </p>
  </div>

  <div class="p-6 rounded-lg shadow-lg bg-white mb-4">
    <p class="font-bold">
      Balance
    </p>
    <p class="text-2xl">
      <%= number_to_currency @balance %>
    </p>
  </div>
  <div class="p-6 rounded-lg shadow-lg bg-white mb-4">
  <p class="font-bold">
    Transactions
  </p>
  <%= link_to 'New transaction', new_transaction_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %></div>
  
  <div class="p-6 rounded-lg shadow-lg bg-white mb-4">
    <p class="font-bold">
      Logout 
    </p>
  </div>
</div>

  <div id="transactions" class="min-w-full">
    <%= render @transactions %>
  </div>


</div>
